@model ManageBrowseViewModel

@{ ViewData["Title"] = "Content Manager"; }

@section Styles
{
    <style type="text/css">
        tr .hover-link {
            visibility: hidden;
        }

        tr:hover .hover-link {
            visibility: visible;
        }
    </style>
}

<h3>Content Manager</h3>

<nav aria-label="breadcrumb">
    <manage-breadcrumb path-parts="@Model.PathParts"></manage-breadcrumb>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th>Last update</th>
        </tr>
    </thead>
    <tbody class="directories">
        @foreach (var item in Model.Directories)
        {
            <tr>
                <td>
                    <i class="fa fa-folder-o text-primary" aria-hidden="true"></i>
                    <a asp-action="Browse" asp-route-path="@item.Path.RelativePath">@item.Path.Name</a>
                </td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
    <tbody class="files">
        @foreach (var item in Model.Files)
        {
            <tr>
                <td>
                    <i class="fa fa-file-o text-primary" aria-hidden="true"></i>
                    <a asp-action="Edit" asp-route-path="@item.Path.RelativePath">@item.Path.Name</a>
                </td>
                <td>
                    <span class="hover-link">
                        <a asp-action="EditRaw" asp-route-path="@item.Path.RelativePath">Raw</a>
                    </span>
                </td>
                <td>
                    <span title="@item.LastUpdate?">@item.LastUpdate.ToRelativeTime()</span>
                </td>
            </tr>
        }
    </tbody>
</table>