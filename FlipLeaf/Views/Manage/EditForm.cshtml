@model ManageEditFormViewModel
@using FlipLeaf.Rendering.FormTemplating;

@{ ViewData["Title"] = "Page Editor"; }

@section Styles
{
    <style type="text/css">
        .btn-toolbar > * {
            margin: 0 2px;
        }

        #Content {
            font-size: .9rem;
        }
    </style>
}

<h3>@Model.FormTemplate.Title</h3>

<nav aria-label="breadcrumb">
    <manage-breadcrumb path-parts="@Model.PathParts"></manage-breadcrumb>
</nav>

<form method="post">

    <ul class="nav nav-tabs mb-2">
        <li class="nav-item">
            <a class="nav-link active">Form</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-action="Edit" asp-route-mode="Raw">Raw</a>
        </li>
    </ul>

    @foreach (var field in Model.FormTemplate.Fields)
    {
        if (field.Id == null) continue;

        var hasValue = Model.Form.TryGetValue(field.Id, out var value);
        var fieldId = $"Form_{field.Id}";
        var fieldName = $"Form.{field.Id}";

        if(!hasValue && field.DefaultValue != null)
        {
            value = field.DefaultValue;
        }

        if (field.Type == FormTemplateFieldType.Text)
        {
            <div class="form-group">
                <label for="{fieldId}">@field.Name</label>
                <input type="text" id="{fieldId}" name="{fieldName}" value="@value" class="form-control" />
                @if (!string.IsNullOrWhiteSpace(field.Description))
                {
                    <small class="form-text text-muted">@field.Description</small>
                }
            </div>
        }
        else if(field.Type == FormTemplateFieldType.Choice)
        {
            <div class="form-group">
                <label for="{fieldId}">@field.Name</label>
                <select id="{fieldId}" name="{fieldName}" class="form-control">
                    @if (field.Choices != null)
                    {
                        foreach (var choice in field.Choices)
                        {
                        <option value="@choice.Value" selected="@choice.IsSelected(value)">@choice.Text</option>
                        }
                    }
                </select>
                @if (!string.IsNullOrWhiteSpace(field.Description))
                {
                    <small class="form-text text-muted">@field.Description</small>
                }
            </div>
        }

    }    

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" rows="10" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <input asp-for="Comment" class="form-control" />
    </div>

    <div class="btn-toolbar">
        <button type="submit" name="Action" value="Save" class="btn btn-primary">Save</button>
        <button type="submit" name="Action" value="SaveAndContinue" class="btn btn-secondary">Save and Continue</button>
        <a asp-action="Index" asp-controller="Render" asp-route-path="@Model.Path" class="btn btn-link">View</a>
    </div>
</form>
